{
  "npmClient": "pnpm",
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "version": "independent",
  "registry": "https://registry.npmjs.org/",
  "command": {
    "version": { "exact": true },
    "publish": {
      "npmClient": "npm",
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "ignoreChanges": ["**/stories/**", "**/tests/**"],
      "allowBranch": "main"
    }
  }
}
